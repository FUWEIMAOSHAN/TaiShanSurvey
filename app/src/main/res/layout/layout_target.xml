<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/title_img_wh"
            android:layout_height="@dimen/title_img_wh"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/back_padding"
            android:src="@drawable/left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/title_margin_bottom"
            android:text="@string/target_detail"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sys_sp7" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/title_img_wh"
            android:layout_height="@dimen/title_img_wh"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/back_padding"
            android:src="@drawable/delete_target"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colormainbg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/content_item_height"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="名称:"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sys_sp4" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入名称"
                    android:maxLength="50"
                    android:paddingLeft="@dimen/content_padding"
                    android:singleLine="true"
                    android:textSize="@dimen/sys_sp3" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorsplit" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/content_item_height"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="类型:"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sys_sp4" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入类型"
                    android:maxLength="50"
                    android:paddingLeft="@dimen/content_padding"
                    android:singleLine="true"
                    android:textSize="@dimen/sys_sp3"
                    android:ellipsize="end"/>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorsplit" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/content_item_height"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="规模:"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sys_sp4" />

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="请选择规模"
                    android:maxLength="50"
                    android:paddingLeft="@dimen/content_padding"
                    android:singleLine="true"
                    android:textSize="@dimen/sys_sp3" />

                <ImageView
                    android:id="@+id/iv_inf"
                    android:padding="@dimen/margin_10_dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_info_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorsplit" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/content_item_height"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="年代:"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sys_sp4" />

                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="请选择年代"
                    android:maxLength="50"
                    android:paddingLeft="@dimen/content_padding"
                    android:singleLine="true"
                    android:textSize="@dimen/sys_sp3" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorsplit" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/content_item_height"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="级别:"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sys_sp4" />

                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="请选择级别"
                    android:maxLength="50"
                    android:paddingLeft="@dimen/content_padding"
                    android:singleLine="true"
                    android:textSize="@dimen/sys_sp3" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorsplit" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/media_height"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/content_padding"
                android:paddingRight="@dimen/content_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="封面"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sys_sp4" />

                <ImageView
                    android:id="@+id/iv_target"
                    android:layout_width="@dimen/media_height"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/content_padding"
                    android:paddingLeft="@dimen/content_padding"
                    android:paddingTop="@dimen/content_padding"
                    android:src="@drawable/target_img" />
            </RelativeLayout>

            <Button
                android:layout_marginRight="@dimen/margin_10_dp"
                android:layout_marginLeft="@dimen/margin_10_dp"
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_btn_height"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="80dp"
                android:background="@drawable/login_button"
                android:text="@string/commit"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sys_sp4" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>